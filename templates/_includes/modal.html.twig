<div
        {{ stimulus_controller('modal', {
            closeOutside: false
        }) }}
        id="{{ id }}"
>
    <div
            class="hidden relative z-20"
            aria-labelledby="modal-title"
            role="dialog"
            aria-modal="true"
            data-modal-target="boxToClose"
            {% if dispatches is defined %}data-action="{% for dispatch in dispatches %}{{ dispatch }}@window->modal#openDispatch{% if not loop.last %} {% endif %}{% endfor %}"{% endif %}
    >
        <div class="fixed inset-0 bg-black bg-opacity-75 transition-opacity"></div>

        <div class="fixed inset-0 z-10 overflow-y-auto">
            <div class="flex min-h-full justify-center p-4 text-center items-center sm:p-0">
                <div
                        {{ stimulus_target('modal', 'modal') }}
                        class="relative transform overflow-hidden rounded-lg bg-white text-left shadow-xl transition-all sm:my-8 sm:w-full sm:max-w-lg"
                >
                    <div class="bg-white px-4 pb-4 pt-5 sm:p-6 sm:pb-4">
                        <div class="sm:flex sm:items-start">
                            <div class="mx-auto flex h-12 w-12 flex-shrink-0 items-center justify-center rounded-full bg-red-100 sm:mx-0 sm:h-10 sm:w-10">
                                {{ heroicon('exclamation-triangle', 'outline', {
                                    class: 'h-6 w-6 text-red-600 stroke-current fill-transparent'
                                }) }}
                            </div>
                            <div class="mt-3 text-center sm:ml-4 sm:mt-0 sm:text-left">
                                <span class="text-base font-semibold leading-6 text-gray-900" id="modal-title">
                                    Exemple title.</span>
                                <div class="mt-2">
                                    <p class="text-sm text-gray-500">Exemple text.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="bg-gray-50 px-4 py-3 sm:flex sm:flex-row-reverse sm:px-6">
                        <button data-action="click->modal#close"
                                type="button"
                                class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:mt-0 sm:w-auto">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>