{% extends 'base.html.twig' %}

{% block subTitle %}{{ page.title }}{% endblock %}

{% block body %}
    <div class="py-48 container px-4 mx-auto">
        <div class="antialiased text-summary text-gray-300">
            <div class="max-w-8xl mx-auto">
                <div class="w-full mx-auto space-y-8">
                    <div class="relative w-full">
                        <h1 class="text-white capitalize w-full text-3xl md:text-5xl font-bold leading-tight relative z-10 text-center">
                            {{ page.title }}
                        </h1>
                    </div>
                    <p class="text-justify text-xl">
                        {{ page.content|raw }}
                    </p>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
