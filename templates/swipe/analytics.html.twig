{% extends 'admin.html.twig' %}

{% block title %}
    Statistiques {{ swipeup == null ? 'générales' : 'de @'~swipeup.slug }}
{% endblock %}

{% block body %}
    <main class="font-light body-font py-24 max-w-7xl mx-auto space-y-8 lg:space-y-12 px-4 text-white">
        <div style="height: 300px;">
            {{ render_chart(visits) }}
        </div>
        <div class="flex flex-col md:flex-row gap-4 justify-center">
            <div style="height: 300px;">
                {{ render_chart(browsers) }}
            </div>
            <div style="height: 300px;">
                {{ render_chart(os) }}
            </div>
        </div>
    </main>
{% endblock %}

