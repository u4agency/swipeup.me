{% extends 'admin.html.twig' %}

{% block body %}
    <section class="font-light sm:text-xl text-white body-font">
        <div class="mx-auto max-w-screen-2xl py-24">
            <div class="opacity-75 fixed inset-0 -z-[1] overflow-hidden blur-[100px] select-none pointer-events-none">
                <div class="top-2/5 left-3/5 w-[700px] h-[700px] -z-[2] bg-swipe-100 absolute rounded-full opacity-60 ease-gradient animate-gradient-1"></div>
                <div class="top-3/5 left-2/5 w-[600px] h-[600px] -z-[1] bg-swipe-500 absolute rounded-full opacity-60 ease-gradient animate-gradient-2"></div>
                <div class="top-1/2 left-1/2 w-[500px] h-[500px] -z-[3] bg-swipe-900 absolute rounded-full opacity-60 ease-gradient animate-gradient-3"></div>
            </div>

            <div class="flex min-h-full items-center justify-center py-12 mx-auto">
                <div class="w-full space-y-8">
                    <h1 class="mx-auto text-4xl sm:text-5xl font-semibold lg:text-6xl text-center">
                        Mes SwipeUp
                    </h1>

                    <div class="relative bg-transparent w-full rounded-md backdrop-blur-sm">
                        {% for swipeup in swipeups %}
                            <div class="rounded hover:bg-white/10 md:px-6 py-3 flex justify-between items-center text-base sm:text-xl relative">
                                <div class="flex gap-8 items-center font-medium">
                                    <img src="{{ vich_uploader_asset(swipeup, 'logoFile')|imagine_filter('swipeup') }}"
                                         alt="{{ swipeup.title }}"
                                         class="h-10 w-10 rounded-full"/>
                                    <div>
                                        <a href="{{ path('app_user_swipeup_edit', {'slug': swipeup.slug}) }}"
                                           class="hover:no-underline">
                                            <span class="inset-0 absolute"></span>
                                            {{ swipeup.title }}
                                        </a>
                                        <p class="text-base text-neutral-400">
                                            <span {{ stimulus_controller('tippy', {text: swipeup.createdAt|date("d/m/Y \à H:i:s")}) }}>
                                                {{ swipeup.createdAt|dateHR }}
                                            </span>
                                        </p>
                                    </div>
                                </div>
                                <div class="flex flex-wrap items-center gap-2">
                                    <p class="py-2 pl-4 sr-only lg:not-sr-only">
                                        {{ swipeup.status|status }}
                                    </p>
                                    <div class="relative">
                                        <a href="{{ path('app_user_swipeup_settings', {'slug': swipeup.slug}) }}"
                                           class="text-neutral-400 hover:text-neutral-100 focus:text-white">
                                            {{ heroicon('cog-6-tooth', 'solid', {
                                                'class': 'fill-current stroke-none w-8 h-8',
                                            }) }}
                                        </a>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="md:px-6 md:py-3">
                        <a href="{{ path('app_swipe_create') }}"
                           class="inline-block w-full md:w-auto text-center text-white bg-gradient-to-tr from-swipe-900 to-swipe-400 hover:to-swipe-500 focus:to-swipe-600 border-0 py-4 px-6 focus:outline-none rounded-lg text-lg">
                            Créer un SwipeUp
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block title %}
    Mes SwipeUp
{% endblock %}

