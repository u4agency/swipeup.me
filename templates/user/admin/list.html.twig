{% extends 'admin.html.twig' %}

{% block body %}
    <section class="font-light sm:text-xl text-white body-font">
        <div class="mx-auto max-w-screen-2xl flex px-5 py-24 md:py-36 md:flex-row flex-col items-center">
            <div class="opacity-75 fixed inset-0 -z-[1] overflow-hidden blur-[100px] select-none pointer-events-none">
                <div class="top-2/5 left-3/5 w-[700px] h-[700px] -z-[2] bg-swipe-100 absolute rounded-full opacity-60 ease-gradient animate-gradient-1"></div>
                <div class="top-3/5 left-2/5 w-[600px] h-[600px] -z-[1] bg-swipe-500 absolute rounded-full opacity-60 ease-gradient animate-gradient-2"></div>
                <div class="top-1/2 left-1/2 w-[500px] h-[500px] -z-[3] bg-swipe-900 absolute rounded-full opacity-60 ease-gradient animate-gradient-3"></div>
            </div>

            <div class="flex min-h-full items-center justify-center py-12 px-4 sm:px-6 lg:px-8 mx-auto">
                <div class="w-full space-y-16">
                    <h1 class="mx-auto text-4xl sm:text-5xl font-semibold lg:text-6xl text-center">
                        Mes SwipeUp
                    </h1>
                    <div class="w-full mx-auto grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-x-4 gap-y-8">
                        {% for swipeup in swipeups %}
                            <div>
                                <a href="{{ path('app_swipeup_single', {slug:swipeup.slug}) }}"
                                   class="relative group">
                                    <img src="{{ swipeup.swipes|length > 0 ? vich_uploader_asset(swipeup.swipes[0].background, 'backgroundFile') }}"
                                         alt="{{ swipeup.title }}"
                                         class="px-0 rounded-lg h-[320px] max-w-[180px] w-full object-center object-cover mx-auto"/>
                                    <div class="px-4 py-3 text-center w-full">
                                        <h2 class="truncate font-semibold group-hover:text-gray-200 duration-100">
                                            {{ swipeup.title }}
                                        </h2>
                                        <div class="pt-4 space-y-2">
                                            <a href="{{ path('app_swipeup_edit', {slug:swipeup.slug}) }}"
                                               class="block rounded-xl text-white bg-swipe-600 hover:bg-swipe-700 py-4 px-8 text-xl w-full">
                                                Modifier {{ swipeup.title }}
                                            </a>
                                            <a href="{{ path('app_swipeup_single', {slug:swipeup.slug}) }}"
                                               class="block rounded-xl text-white border-2 border-swipe-600 hover:border-swipe-700 py-4 px-8 text-xl w-full">
                                                Aller voir {{ swipeup.title }}
                                            </a>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block title %}
    Mes SwipeUp
{% endblock %}

