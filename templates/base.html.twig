<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SwipeUp | Tout ce dont vous avez besoin en un swipe !{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-black font-swipe">
<div class="overflow-hidden inset-0 -z-[4] fixed blur-[100px] select-none pointer-events-none">
    <div id="cursor-follower"
         class="w-[300px] h-[300px] -z-[4] bg-swipe-100 absolute rounded-full opacity-40"
         style="display:none;"></div>
</div>
{% include '_includes/navbar.html.twig' %}
{% block body %}{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script>
        let cursorFollower = document.querySelector("#cursor-follower");

        document.addEventListener("mousemove", e => {
            cursorFollower.style.cssText = `display: block; transform: translate3d(${e.clientX - 150}px, ${e.clientY - 150}px, 0);`
        });
    </script>
{% endblock %}
</body>
</html>
