<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}SwipeUp | Tout ce dont vous avez besoin en un swipe !{% endblock %} • SwipeUp</title>

    {% block meta %}
        <meta name="title"
              content="{{ block('title') ~ ' • SwipeUp' }}">
        <meta name="description"
              content="{% block description %}La SEULE solution de création et de référencement de site web adapté à notre temps. Vous comprendre ne prendra que très peu de temps avec SwipeUp.{% endblock %}">

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website">
        <meta property="og:title"
              content="{{ block('title') ~ ' • SwipeUp' }}">
        <meta property="og:description"
              content="{{ block('description') ?: 'La SEULE solution de création et de référencement de site web adapté à notre temps. Vous comprendre ne prendra que très peu de temps avec SwipeUp. ' }}">
        <meta property="og:image"
              content="{{ app.request.schemeAndHttpHost }}{{ asset('seo_image.png') }}">

        <!-- Twitter -->
        <meta property="twitter:card"
              content="summary">
        <meta property="twitter:site"
              content="@SwipeUp.me">
        <meta property="twitter:title"
              content="{{ block('title') ~ ' • SwipeUp' }}">
        <meta property="twitter:description"
              content="{{ block('description') ?: 'La SEULE solution de création et de référencement de site web adapté à notre temps. Vous comprendre ne prendra que très peu de temps avec SwipeUp. ' }}">
        <meta property="twitter:image"
              content="{{ app.request.schemeAndHttpHost }}{{ asset('seo_image.png') }}">
    {% endblock %}

    <link rel="icon"
          href="{{ app.request.schemeAndHttpHost }}{{ asset('favicon.ico') }}">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="bg-black font-swipe overflow-x-hidden">
<div class="overflow-hidden inset-0 -z-[4] fixed blur-[100px] select-none pointer-events-none">
    <div id="cursor-follower"
         class="w-[300px] h-[300px] -z-[4] bg-swipe-100 absolute rounded-full opacity-40"
         style="display:none;">
    </div>
</div>
{% include '_includes/navbar.html.twig' %}
{% block body %}{% endblock %}
{% include '_includes/footer.html.twig' %}
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
    <script>
        let cursorFollower = document.querySelector("#cursor-follower");

        document.addEventListener("mousemove", e => {
            cursorFollower.style.cssText = `display: block; transform: translate3d(${e.clientX - 150}px, ${e.clientY - 150}px, 0);`
        });
    </script>



    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-TMBTV6N0QS"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag(){dataLayer.push(arguments);}
        gtag('js', new Date());

        gtag('config', 'G-TMBTV6N0QS');
    </script>

    <!-- Hotjar Tracking Code for SwipeUp -->
    <script>
        (function(h,o,t,j,a,r){
            h.hj=h.hj||function(){(h.hj.q=h.hj.q||[]).push(arguments)};
            h._hjSettings={hjid:3362111,hjsv:6};
            a=o.getElementsByTagName('head')[0];
            r=o.createElement('script');r.async=1;
            r.src=t+h._hjSettings.hjid+j+h._hjSettings.hjsv;
            a.appendChild(r);
        })(window,document,'https://static.hotjar.com/c/hotjar-','.js?sv=');
    </script>
{% endblock %}
</body>
</html>
