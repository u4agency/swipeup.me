<div class="relative py-8 flex justify-center items-center h-2/3"
     data-aos="fade-right">
    {% if slide.title %}
        {% if key == 0 %}
            <h1 class="font-bold text-5xl text-center text-white"
                style="{{ slide.textColor is defined ? 'color:'~slide.textColor }}">
                {{ slide.title }}
            </h1>
        {% else %}
            <h2 class="font-bold text-3xl text-center text-white"
                style="{{ slide.textColor is defined ? 'color:'~slide.textColor }}">
                {{ slide.title }}
            </h2>
        {% endif %}
    {% else %}
        <h1 class="sr-only">
            {{ swipe.title }}
        </h1>
    {% endif %}
</div>
